{
  "compilerOptions": {
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      // "esModuleInterop": true,
      // "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["esnext"],
      "module": "ES6",
      "moduleResolution": "node",
      "noEmit": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "sourceMap": true,
      "strict": true,
      "target": "esnext",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "rootDir": "app",
      "paths": {
        "/*": [
          "app/*"
        ],
      },
      "baseUrl": ".",
  },
  "include": [
    "index.js",
    "app",
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    ".vscode",
    "__tests__/", // exclude test files
    "rn-cli.config.js",
  ],
  /*
  "typeRoots": [
    "node_modules/@types",
    "@types",
  ]
  */
}